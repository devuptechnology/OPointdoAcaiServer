<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    tools:context=".Activity.OrderPannel">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_id_order_pannel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp">

    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/btn_status_pedidos"
        android:layout_width="match_parent"
        android:textColor="@color/colorTextWithe"
        android:textAlignment="center"
        android:layout_below="@+id/toolbar_id_order_pannel"
        android:text="Pedidos Solicitados"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_main_background"
        android:elevation="8dp" />

    <Button
        android:id="@+id/btn_status_aguardando"
        android:layout_width="match_parent"
        android:layout_below="@+id/btn_status_pedidos"
        android:textColor="@color/colorTextWithe"
        android:textAlignment="center"
        android:text="Pedidos Aguardando"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_main_background"
        android:elevation="8dp" />

    <Button
        android:id="@+id/btn_status_saiuparaentrega"
        android:layout_width="match_parent"
        android:layout_below="@+id/btn_status_aguardando"
        android:textColor="@color/colorTextWithe"
        android:textAlignment="center"
        android:text="Pedidos Saiu para Entrega"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_main_background"
        android:elevation="8dp" />

    <Button
        android:id="@+id/btn_status_historico"
        android:layout_width="match_parent"
        android:layout_below="@+id/btn_status_saiuparaentrega"
        android:textColor="@color/colorTextWithe"
        android:textAlignment="center"
        android:text="HistÃ³rico de Pedidos"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:background="@drawable/button_main_background"
        android:elevation="8dp" />

</RelativeLayout>