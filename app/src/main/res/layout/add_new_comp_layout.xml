<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="1dp"
    app:cardBackgroundColor="#f1f1f1"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/edt_nome_comp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/input_background"
            android:ems="10"
            android:hint="Digite o nome..."
            android:inputType="text"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_description_comp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_nome_comp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_background"
            android:ems="10"
            android:hint="Digite a descrição..."
            android:inputType="textEmailAddress"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_price_comp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_description_comp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/input_background"
            android:ems="10"
            android:hint="Digite o valor..."
            android:inputType="numberDecimal"
            android:paddingLeft="25dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp"
            android:paddingBottom="15dp"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner_comp_types"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_price_comp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:entries="@array/types_comp_array"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:textSize="16sp"
            android:visibility="visible">
        </Spinner>

        <Button
            android:id="@+id/btn_confirm_add_comp"
            android:layout_width="match_parent"
            android:layout_below="@+id/spinner_comp_types"
            android:textColor="@color/colorTextWithe"
            android:textAlignment="center"
            android:text="Adicionar"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="40dp"
            android:background="@drawable/button_main_background"
            android:elevation="8dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>